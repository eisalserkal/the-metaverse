
<div class="container">
  <h1>Find a VR space near you</h1>
  <div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="row">
      <div class="col-12">
        <h1 class="m-4">Find the latest listings</h1>
        <div class="card">
        <%= form_tag spaces_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a space!"
          %>
          <%= submit_tag "Search", class: "btn btn-primary mt-2 ml-1" %>
        <% end %>
        <div class="d-flex align-content-start flex-wrap justify-content-evenly">
        <% @spaces.each do |space| %>
          <%= render 'shared/space_card1', space: space %>
        <% end %>
        </div>
    <button type="button" class="btn btn-outline-primary"><%= link_to "Spaces", spaces_path %></button>
      </div>
    </div>
  </div>
</div>
