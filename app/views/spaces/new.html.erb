<h2 class="text-center mt-2">Add a Space</h2>
<div class="d-flex justify-content-center">
<%= simple_form_for @space, class: 'col-6' do |f| %>
  <%= f.input :name,
              required: true%>
  <%= f.input :location,
              required: true,
              input_html: { data: { geocoder_target: "address" }, class: "d-none bg-light" },
              wrapper_html: { data: { controller: "geocoder",
              geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :hourly_rate,
              label: 'Daily Rate',
              required: true %>
  <%= f.input :vr_headset, collection: ['Oculus Rift', 'Oculus Quest', 'HTC Vive', 'Playstation VR', 'Valve Index'],
              required: true%>
  <%= f.input :overview,
              required: true%>
  <%= f.input :photo, as: :file %>
  <div class="text-center">
  <%= f.submit "Create listing", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
